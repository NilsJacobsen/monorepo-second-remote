{
  "name": "@legit-sdk/create-react-vite-starter",
  "version": "0.1.2",
  "description": "A starter template for React + Vite with Legit SDK integration for local-first document editing and version control",
  "type": "module",
  "bin": {
    "create-react-vite-starter": "bin/cli.js"
  },
  "files": [
    "src",
    "public",
    "bin",
    "*.ts",
    "*.tsx",
    "*.js",
    "*.json",
    "*.css",
    "*.html",
    "README.md",
    ".gitignore"
  ],
  "keywords": [
    "react",
    "vite",
    "starter",
    "template",
    "legit-sdk",
    "local-first",
    "version-control"
  ],
  "author": "Legit Control",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/legitcontrol/monorepo.git",
