  "dependencies": {
    "@legit-sdk/react": "^0.2.15",
    "diff-match-patch-ts": "^0.8.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^1.7.3",
    "timeago.js": "^4.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
