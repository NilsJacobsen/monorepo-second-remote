{
  "name": "@legit-sdk/core",
  "version": "0.4.5",
  "description": "Legit SDK - Infrastructure for write-enabled AI",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.js"
    }
  },
  "scripts": {
    "test": "vitest",
    "dev": "node  --loader ts-node/esm --inspect ./node_modules/vite-node/dist/cli.mjs --watch src/vite.ts",
    "build": "tsc && node esbuild.config.js && rollup -c rollup.dts.config.js",
    "build:dev": "tsc --build",
    "build:watch": "tsc --noEmitOnError false --watch",
    "test:watch": "vitest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.4.1",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/server.js",
    "dist/server.d.ts",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "22.14.1",
    "browser-fs-access": "^0.38.0",
    "buffer": "^6.0.3",
    "esbuild": "^0.24.2",
    "esbuild-plugins-node-modules-polyfill": "^1.7.1",
    "events": "^3.3.0",
    "https-browserify": "^1.0.0",
    "path-browserify": "^1.0.1",
    "querystring-es3": "^0.2.1",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "ts-node": "^10.9.2",
    "url": "^0.11.4",
    "vite": "^6.2.5",
    "vite-node": "^3.1.1",
    "vite-plugin-commonjs": "^0.10.4",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@legit-sdk/isomorphic-git": "workspace:*",
    "ignore": "^7.0.4",
    "memfs": "^4.14.0",
    "pako": "^2.1.0",
    "typescript": "^5.8.3"
  }
}
